SELECT  co.name as course_name,'курс не используется' as student_name
from course co,student_on_course sc, student st
          where co.is_online = false and (SELECT co.id FROM course co
    LEFT OUTER JOIN student_on_course sc ON sc.course_id = co.id
    WHERE sc.id IS NULL) = co.id

Union SELECT  co.name,st.name from course co,student_on_course sc, student st
           where co.is_online = false and sc.student_id = st.id and sc.course_id = co.id
          group by co.name,st.name  having count(sc.course_id) is not null;
