SELECT  co.name as course_name,'курс не используется' as student_name
from course co,student_on_course sc, student st
               where co.is_online = false and (sc.course_id != co.id)
                --and (EXISTS(SELECT co.id from course co,student_on_course sc, student st where sc.course_id != co.id and co.is_online=false))
              -- group by co.name having count(co.name) is not null

Union SELECT  co.name,st.name from course co,student_on_course sc, student st
             where co.is_online = false and sc.student_id = st.id and sc.course_id = co.id
           group by co.name,st.name  having count(sc.course_id) is not null  limit 3 ;
